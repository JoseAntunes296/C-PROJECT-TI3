@model IEnumerable<Project.Models.user>
@{
    ViewBag.Title = "ManageUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles {
    <style>
        tbody tr {
            opacity: 0.6;
        }

        .table-container {
            display: inline-block;
        }

        tbody tr:hover {
            opacity: 1;
        }

        .hoverView {
            opacity: 0.8;
            background-color: #222831;
            color: white;
            transition: 0.3s;
            border-radius: 2rem;
        }

            .hoverView:hover {
                opacity: 1.2;
                color: white;
                border-color: #225841;
            }

        .table-responsive {
            overflow-x: auto;
        }
    </style>
}
@{
    if (Session["IdUser"] != null && Session["administrator"] != null)
    {
        if ((int)Session["administrator"] != 1)
        {
            Response.Redirect("/Home/Index");
        }
    }
    else
    {
        Response.Redirect("/Home/Index");
    }
}
<div class="text-center mt-3">
    <div class="table-responsive">
        <table class="table" style="background-color: #222831;color:white;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Tipo de Utilizador</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <p>
                        error
                    </p>
                }
                else
                {
                    foreach (var user in Model)
                    {
                        var admin = user.administrator == 1 ? "Administrador" : "Comum";
                        <tr>
                            <td>@user.IdUser</td>
                            <td>
                                @user.username
                            </td>
                            <td>@user.email</td>
                            <td>@admin</td>
                            <td>
                                <button class="btn hoverView" style="background-color: #1f2029; color: white;" data-toggle="modal" data-target="#editUserModal"
                                        onclick="editUser(this)" data-user-id="@user.IdUser">
                                    Editar
                                </button>
                                <button class="btn hoverView btn-delete" style="background-color: #1f2029; color: white;" data-toggle="modal" data-target="#confirmDeleteModal" data-user-id="@user.IdUser">Apagar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div>
        <a href="/AdminPanel/Index" class="btn hoverView" style="background-color: #222831;color:white; ">Go Back</a>
    </div>
</div>
<!-- Modal de Confirmação de Exclusão -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true" style="background-color: #1f2029;">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="background-color: #1f2029; color:white;">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Exclusão</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color:white">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Deseja realmente excluir este projeto?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger">Excluir</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal de Edição de Projeto -->
<div class="modal fade" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="editUserModalLabel" aria-hidden="true" style="background-color: #1f2029;">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="background-color: #1f2029; color:white;">
            <div class="modal-header">
                <h5 class="modal-title" id="editUserModalLabel">Editar Projeto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color:white">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="editusername">username:</label>
                        <input type="text" class="form-control" id="editusername" placeholder="username" disabled>
                    </div>
                    <div class="form-group">
                        <label for="editUserEmail">Email:</label>
                        <input type="text" class="form-control" id="editUserEmail" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="select1">Tipo de Utilizador:</label>
                        <select class="form-control" id="select1">
                            <option value="1">Administrador</option>
                            <option value="0">Padrão</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="status">Estado:</label>
                        <select class="form-control" id="status">
                            <option value="1">Ativo</option>
                            <option value="0">Inativo</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" id="saveChangesButton">Guardar Alterações</button>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section scripts {
    <script>
        function editUser(button) {
            var userId = $(button).data('user-id');

            $('#editUserModal .btn-primary').click(function () {
                var url = '/AdminPanel/UpdateUser/';
                console.log(userId);
                $.ajax({
                    url: url,
                    type: 'POST',
                    data: {
                        userId: userId,
                        email: $('#editUserEmail').val(),
                        administrador: $('#editUseradministrador').val(),
                        status: $('#editUserstatus').val()
                    },
                    success: function (response) {
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        console.log(xhr.responseText);
                    }
                });
            });

            $.ajax({
                url: '/AdminPanel/GetUser',
                type: 'POST',
                dataType: 'json',
                data: { userId: userId },
                success: function (response) {
                    console.log(response.username);
                    $('#editusername').val(response.username);
                    $('#editUserEmail').val(response.email);
                    $('#editUseradministrador').attr(response.administrador);
                    $('#editUserstatus').attr(response.status);
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        $(document).ready(function () {
            $('.btn-delete').click(function () {
                var userId = $(this).data('user-id');
                var userIdToDelete = userId;
                $('#confirmDeleteModal').modal('show');
                $('#confirmDeleteModal .btn-danger').data('user-id', userIdToDelete);
            });
            $('#confirmDeleteModal .btn-danger').click(function () {
                var userId = $(this).data('user-id');

                $.ajax({
                    url: '/Accounts/DeleteUser',
                    type: 'POST',
                    data: {
                        userId: userId
                    },
                    success: function (response) {
                        if (response.success) {
                            console.log('Usuário excluído com sucesso!');
                        } else {
                            console.log('Erro ao excluir o usuário.');
                        }
                    }
                });
                $('#confirmDeleteModal').modal('hide');
            });
        });
    </script>
}